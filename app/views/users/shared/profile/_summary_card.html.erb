<div class="card card-profile">
  <%= image_tag "theme/img-1-1000x600.jpg", class: "card-img-top", alt: "Image placeholder" %>
  <div class="row justify-content-center">
    <div class="col-lg-3 order-lg-2">
      <div class="card-profile-image">
        <a href="#">
          <%= image_tag(@user.avatar_thumbnail, class: 'rounded-circle')%>
        </a>
      </div>
    </div>
  </div>
  <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
    <div class="d-flex justify-content-between">
      <button type="button" class="btn btn-sm btn-primary float-left"><%= link_to 'Rendez-vous', "/components/meeting/#{@user.id}", class:"text-white" %></button>
      <%= link_to 'Message', conversations_path(recipient_id: @user.id), method: :post, class:"btn btn-sm btn-default float-right" %>
    </div>
  </div>
  <div class="card-body pt-0">
    <div class="row">
      <div class="col">
        <div class="card-profile-stats d-flex justify-content-center">
          <div>
            <span class="heading">22</span>
            <span class="description">Etudiants</span>
          </div>
          <div>
            <span class="heading">10</span>
            <span class="description">Articles</span>
          </div>
          <div>
            <span class="heading">89</span>
            <span class="description">Avis</span>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center">
      <h5 class="h3">
        <%= @user.name %><span class="font-weight-light">, 27</span>
      </h5>
      <div class="h5 font-weight-300">
        <%= @user.email %>
      </div>
      <div class="">
        <button type="button" name="button" class="btn btn-sm btn-success"> Mentor </button>
      </div>
      <div class="h5 mt-4">
        <i class="ni business_briefcase-24 mr-2"></i> <%= @user.speciality %>
      </div>
    </div>
  </div>
</div>
