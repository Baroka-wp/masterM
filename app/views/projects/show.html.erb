<div class="row">
  <div class="col">
    <div class="card">
      <!-- Card header -->
      <div class="card-header">
        <div class="row mb-2">
          <div class="col-12 col-lg-12">
            <% if notice %>
              <%= render partial: 'shared/alerts/dismissible', locals: {
                    message: notice,
                    icon_class: 'ni ni-like-2',
                    alert_type: 'alert-success',
                    dismissible: true
              } %>
            <% end %>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col">
            <h3><%= @project.name %></h3>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <a class="btn btn-primary btn-sm" href="<%= projects_path %>"><%= fa_icon 'chevron-left' %> Back</a>
            <a class="btn btn-primary btn-sm" href="<%= edit_project_path(@project) %>"><%= fa_icon 'edit' %> Edit</a>
            <a class="btn btn-primary btn-sm" data-toggle="modal"
              data-target="#<%= deletion_modal_id(@project) %>">
              <%= fa_icon 'trash' %> Delete
            </a>
            <%= render partial: 'shared/modals/confirmation', locals: {
              id: deletion_modal_id(@project),
              title: 'Are you sure?',
              heading_1: "You're about to delete this project:",
              heading_2: @project.name,
              path: project_path(@project),
              method: 'delete',
              confirm_button: 'Delete'
            } %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h4>Project name</h4>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <p><%= @project.name %></p>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-4">
            <h4>Projects statut</h4>
            <p><%= format_statut (@project.statut) %></p>
          </div>
          <div class="col-4">
            <h4>Projects start</h4>
            <p><%= @project.start %></p>
          </div>
          <div class="col-4">
            <h4>Projects deadline</h4>
            <p><%= @project.deadline %></p>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col">
            <h4>Project description</h4>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <p><%= @project.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
