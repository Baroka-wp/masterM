<div class="card-body px-lg-5 py-lg-3">
  <div class="text-center text-primary mb-2">
    <small>Bug details</small>
  </div>
<%= form_for(@bug, local: true) do |f| %>
    <div class="form-group mb-3">
      <div class="input-group input-group-merge input-group-alternative">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="ni ni-bag-17"></i></span>
        </div>
        <%= f.text_field :title, class: "form-control",  placeholder:"Bugs title" %>
      </div>
    </div>
    <% if current_user.advisor? %>
    <div class="form-group mb-3">
      <div class="input-group input-group-merge input-group-alternative">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="ni ni-check-bold"></i></span>
        </div>
        <%= f.select(:statut,
                        options_for_select(statuts_for_select, @bug.statut),
                        {}, class: 'custom-select',placeholder:"statut" ) %>
      </div>
    </div>
    <% end %>
    <div class="form-group">
      <div class="img-fluid responsive">
        <%= image_tag @bug.image if @bug.image.attached? %>
      </div>
        <br>
        <%= f.text_area :content, class: "form-control", placeholder:"bug content" %>
        <div class="input-group input-group-merge input-group-alternative mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="ni ni-image"></i></span>
          </div>
          <%= f.file_field :image, class: "form-control", placeholder: "Your avatar" %>
        </div>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-default my-4">Push</button>
    </div>
  <% end %>
</div>
